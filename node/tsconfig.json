{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "downlevelIteration": true,
  },
  "include": [
    "index.ts", 
    "node_modules/@types/**/*",
    "../commons/src"
  ],
  "exclude": [
    "dist",
    "nodemodules/**/*"
  ]
}