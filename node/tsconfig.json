{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,        /* Disallow inconsistently-cased references to the same file. */
    "downlevelIteration": true,
    "sourceMap": true,
  },
  "include": [
    "index.ts", 
    "src/**/*.ts",
    "node_modules/@types/**/*"
  ],
  "exclude": [
    "dist",
    "nodemodules/**/*"
  ]
}
